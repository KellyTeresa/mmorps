<h1>Welcome to MMORPS</h1>
<%= session[:current_result] if session[:current_result] %>

<ul>
  <li>Player Score: <%= session[:player_score].to_s %></li>
  <li>Computer Score: <%= session[:computer_score].to_s %></li>
</ul>
<% if session[:winner].nil? %>
<%="<form action='/' method='post'>
  <input type='radio' name='rps' value='r'> Rock
  <input type='radio' name='rps' value='p'> Paper
  <input type='radio' name='rps' value='s'> Scissors
  <input type='submit' value='Go!'>
</form>" %>
<% end %>

<% if session[:winner] == true %>
<%="<form action='/reset' method='post'>
  <input type='submit' value='Play again'>
</form>"%>
<% end %>
